[Unit]
Description=Ant Random Verifier
After=network.target

[Service]
{% if evm_network_type == "evm-custom" %}
Environment="RPC_URL={{ evm_rpc_url }}"
Environment="PAYMENT_TOKEN_ADDRESS={{ evm_payment_token_address }}"
Environment="DATA_PAYMENTS_ADDRESS={{ evm_data_payments_address }}"
{% elif evm_network_type == "evm-arbitrum-sepolia" %}
Environment="EVM_NETWORK=arbitrum-sepolia"
{% elif evm_network_type == "evm-arbitrum-one" %}
Environment="EVM_NETWORK=arbitrum-one"
{% endif %}
Environment="CHUNK_DOWNLOAD_BATCH_SIZE={{ random_verifier_batch_size }}"
Environment="PYTHONUNBUFFERED=1"
User=ant1
{% if network_id == "1" %}
ExecStart=/home/ant1/ant_static_downloader.py --mode random --csv-path /home/ant1/prod.csv
{% else %}
ExecStart=/home/ant1/ant_static_downloader.py --mode random --csv-path /home/ant1/prod.csv --network-id "{{network_id}}" {% if peer is defined %}--peer "{{ peer }}" {% endif %} {% if network_contacts_url is defined %}--network-contacts-url "{{network_contacts_url}}"{% endif %}
{% endif %}

Restart=always
WorkingDirectory=/home/ant1

[Install]
WantedBy=multi-user.target
